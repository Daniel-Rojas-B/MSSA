<!-- Views/BetPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SoccerBettingApp.View.BetPage"
             Title="Place Bet">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="{Binding SelectedMatch.HomeTeam}" FontSize="24"/>
        <Label Text="vs"/>
        <Label Text="{Binding SelectedMatch.AwayTeam}" FontSize="24"/>

        <Picker Title="Choose Outcome"
                ItemsSource="{Binding Outcomes}"
                SelectedItem="{Binding SelectedOutcome}" />

        <Button Text="Place Bet" Command="{Binding PlaceBetCommand}" />
    </VerticalStackLayout>
</ContentPage>

