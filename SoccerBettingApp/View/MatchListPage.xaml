<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoccerBettingApp.View.MatchListPage"
             Title="Upcoming Matches">
    <CollectionView ItemsSource="{Binding Matches}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" BorderColor="Gray" CornerRadius="10">
                    <StackLayout>
                        <Label Text="{Binding DisplayTitle}" FontAttributes="Bold" FontSize="18"/>
                        <Label Text="{Binding DisplayDate}" FontSize="14" TextColor="Gray"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>


