<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SoccerBettingApp.View.HistoryPage"
             Title="My Bets">
    <VerticalStackLayout Padding="20">
        <CollectionView ItemsSource="{Binding Bets}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding MatchId, StringFormat='Match ID: {0}'}" />
                            <Label Text="{Binding SelectedOutcome, StringFormat='Your Bet: {0}'}" />
                            <Label Text="{Binding PlacedAt, StringFormat='Placed At: {0:MM/dd/yyyy HH:mm}'}" FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>

